<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayoutMain"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="Activities.WriteCFSRFIDTag">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp"
                android:scrollbars="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/button2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:height="69dp"
                        android:text="Read"
                        android:visibility="visible" />

                    <Button
                        android:id="@+id/button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:height="69dp"
                        android:onClick="onSetDefaults"
                        android:text="Reset" />

                    <Button
                        android:id="@+id/button3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:height="69dp"
                        android:onClick="onWriteBlock"
                        android:text="Write" />
                </LinearLayout>

                <View
                    android:id="@+id/divider9"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?android:attr/listDivider" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:height="48dp"
                            android:text="Batch" />

                        <EditText
                            android:id="@+id/cfsrfidBatch"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:height="48dp"
                            android:ems="10"
                            android:inputType="text"
                            android:text="7A3" />
                    </LinearLayout>

                </LinearLayout>

                <View
                    android:id="@+id/divider10"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?android:attr/listDivider" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:height="48dp"
                    android:text="Date" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/cfsrfidDateY"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:height="48dp"
                        android:ems="10"
                        android:inputType="text"
                        android:text="24" />

                    <EditText
                        android:id="@+id/cfsrfidDateM"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:height="48dp"
                        android:ems="10"
                        android:inputType="text"
                        android:text="1" />

                    <EditText
                        android:id="@+id/cfsrfidDateD"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:height="48dp"
                        android:ems="10"
                        android:inputType="text"
                        android:text="20" />
                </LinearLayout>

                <View
                    android:id="@+id/divider11"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?android:attr/listDivider" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:height="48dp"
                    android:text="Supplier" />

                <EditText
                    android:id="@+id/cfsrfidSupplier"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:height="48dp"
                    android:ems="10"
                    android:inputType="text"
                    android:text="0A21" />

                <View
                    android:id="@+id/divider12"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?android:attr/listDivider" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:height="48dp"
                    android:text="Material" />

                <Spinner
                    android:id="@+id/cfsrfidMaterial"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <View
                    android:id="@+id/divider13"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?android:attr/listDivider" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:height="48dp"
                    android:text="Number" />

                <EditText
                    android:id="@+id/cfsrfidNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:height="48dp"
                    android:ems="10"
                    android:inputType="text"
                    android:text="016500" />

                <View
                    android:id="@+id/divider14"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?android:attr/listDivider" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:height="48dp"
                    android:text="Color" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/cfsrfidButtonColor"
                        style="@style/Widget.AppCompat.Button.Colored"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_weight="0"
                        android:width="45dp"
                        android:height="45dp"
                        android:background="#0000FF"
                        android:onClick="onColorPicker" />

                    <EditText
                        android:id="@+id/cfsrfidColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:height="48dp"
                        android:ems="10"
                        android:inputType="text"
                        android:text="#0000FF" />
                </LinearLayout>

                <View
                    android:id="@+id/divider15"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?android:attr/listDivider" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:height="48dp"
                    android:text="Reserve" />

                <EditText
                    android:id="@+id/cfsrfidReserve"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:height="48dp"
                    android:ems="10"
                    android:inputType="text"
                    android:text="0001000000000000000" />


            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:visibility="invisible">

        <TextView
            android:id="@+id/textViewMainFooter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:paddingRight="14dp"
            android:paddingBottom="1dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            tools:visibility="invisible" />

        <ScrollView
            android:id="@+id/scrollViewMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textViewMainFooter"
            android:layout_alignParentTop="true">

            <LinearLayout
                android:id="@+id/linearLayoutMainMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:visibility="invisible">

                <LinearLayout
                    android:id="@+id/linearLayoutMainMenuRow1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/buttonMainReadTag"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:drawableTop="@drawable/read_tag"
                        android:onClick="onShowReadTag"
                        android:text="@string/action_read_tag" />

                    <Button
                        android:id="@+id/buttonMainWriteTag"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:drawableTop="@drawable/write_tag"
                        android:onClick="onShowWriteTag"
                        android:text="@string/action_write_tag" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayoutMainMenuRow2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/buttonMainEditCardDump"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:drawableTop="@drawable/edit_dump"
                        android:onClick="onOpenTagDumpEditor"
                        android:text="@string/action_edit_tag_dump" />

                    <Button
                        android:id="@+id/buttonMainEditKeyDump"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:drawableTop="@drawable/edit_keys"
                        android:onClick="onOpenKeyEditor"
                        android:text="@string/action_edit_key_dump" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayoutMainMenuRow3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/buttonMainTools"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:drawableTop="@drawable/tools"
                        android:onClick="onShowTools"
                        android:text="@string/action_tools" />

                    <Button
                        android:id="@+id/buttonMainHelp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:drawableTop="@drawable/help_and_info"
                        android:onClick="onShowHelp"
                        android:text="@string/action_help" />

                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</RelativeLayout>
